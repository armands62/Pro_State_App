<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProStateApp2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProStateApp2"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="#D0D9DE"
    Shell.TitleColor="#313334"
    Shell.NavBarIsVisible="True"
    Shell.TabBarBackgroundColor="#313334"
    Shell.TabBarTitleColor="#d0d9de"
    Shell.TabBarUnselectedColor="#808689">


    <TabBar>
        <ShellContent Title="Profile"
                      Icon="user"
            ContentTemplate="{DataTemplate local:Profile}"/>
        <ShellContent Title="Accounts"
                      Icon="account"
                          ContentTemplate="{DataTemplate local:Accounts}"/>
        <ShellContent Title="Money Transfer"
                      Icon="transfer"
                          ContentTemplate="{DataTemplate local:MoneyTransfer}"/>
        <ShellContent Title="History"
                      Icon="history"
                          ContentTemplate="{DataTemplate local:History}"/>
        <ShellContent Title="Fiscleees!"
                      Icon="fisclees"
                          ContentTemplate="{DataTemplate local:Fisclees}"/>
    </TabBar>

</Shell>
